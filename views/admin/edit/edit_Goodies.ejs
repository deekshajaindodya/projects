<!DOCTYPE html>
<html lang="en">

<%- include("../style.ejs") %>
<body>
  <div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
  
    <!-- partial -->

    <%- include("../head1.ejs") %>
    <div class="container-fluid page-body-wrapper">
      <!-- partial:partials/_sidebar.html -->
     
      <!-- partial -->
     
      <%- include("../sidebar") %>
     
      <div class="main-panel">
        <div class="content-wrapper">
          <form method="POST" enctype="multipart/form-data">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Edit Product</h4>
                    <div class="form-group">
                    
                    </div>
                      
                      <div class="form-group">
                        <label for="exampleDate">Product Title</label>
                        <input type="text" class="form-control" id="exampleDate" value="<%= Product.title %>" name="title" required>
                      </div>
                      
                      <div class="form-group">
                        <label for="exampleDate">Product Description</label>
                        <input type="text" class="form-control" id="exampleDate" value="<%= Product.description %>" name="description" required>
                      </div>
                          
                      <div class="form-group">
                        <label for="exampleInputEmail3">Price (per unit)</label>
                        <input type="number" class="form-control" id="exampleInputEmail3" value="<%= Product.price %>" name="price" required>
                      </div>

                      <div class="form-group">
                        <label for="exampleInputEmail3">Quantity</label>
                        <input type="number" class="form-control" id="exampleInputEmail3" value="<%= Product.quantity %>" name="quantity" required>
                      </div>
        
                      <div class="form-group">
                          <label for="exampleFile">Image of the Product</label>
                          <input type="file" class="form-control" id="exampleFile" value="<%= Product.image %>"name="upload" required> 
                      </div>
                      <div class="form-group">
                        
                        <input type="submit" class="form-control" name="submit" value="Save Changes" style="font-weight: bold; background-color:azure;">
                    </div>
                  
                      </div>
         
        
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
       <%- include("../footer") %>
        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>
    </form>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
</div>
  <!-- plugins:js -->
  </body>

</html>

